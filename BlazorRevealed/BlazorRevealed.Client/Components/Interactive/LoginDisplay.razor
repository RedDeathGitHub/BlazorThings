@inherits LoginDisplayBase

<AuthorizeView>
    <Authorized>
        <p>Hello, @context.User.Identity.Name!</p>
        <button class="btn btn-sm btn-outline-dark" @onclick="@(() => AuthService.Logout())">Logout</button>
    </Authorized>
    <NotAuthorized>
        <p><a href="Register">Register</a></p>
        <p><a href="Login">Log in</a></p>
    </NotAuthorized>
</AuthorizeView>